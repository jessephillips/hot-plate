= simple_form_for(@review) do |f|
  = f.error_notification

  .form-group
    = f.input :name, input_html: { class: 'form-control' }
  .form-group
    = f.input :description, input_html: { class: 'form-control' }
  .form-group
    = f.input :price_in_cents, input_html: { class: 'form-control' }
  .form-group
    = f.input :rating, input_html: { class: 'form-control' }
  .form-group
    = f.input :featured_image, input_html: { class: 'form-control' }
  .form-group
    = f.input :user, input_html: { class: 'form-control' }

  .form-actions
    = f.button :submit, class: 'btn btn-primary btn-lg'
